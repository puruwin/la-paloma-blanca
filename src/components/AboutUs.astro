---
const { content } = Astro.props;
---

<section id="about-us" class="max-w-7xl mx-auto my-16 px-4 sm:h-2/3 flex flex-col items-center justify-around">
  <h2 class="text-3xl font-bold mb-6 text-center">
    {content.about.title}
  </h2>
  <div class="flex flex-col items-center justify-center gap-16">
    <div class="flex flex-col items-center justify-center md:w-3/5">
      <p class="mb-4">
        {content.about.paragraph1}
      </p>
      <p class="mb-8">
        {content.about.paragraph2}
      </p>
    </div>
    <div class="flex flex-col justify-center md:w-2/5">
      <h3 class="text-xl font-semibold mb-3">
        {content.about.whyUs}
      </h3>
      <ul class="list-disc list-inside space-y-2 text-gray-700">
        <li>
          {content.about.reasons[0]}
        </li>
        <li>
          {content.about.reasons[1]}
        </li>
        <li>
          {content.about.reasons[2]}
        </li>
      </ul>
    </div>
  </div>
</section>
