---
const { content } = Astro.props;
---

<section id="services" class="max-w-7xl mx-auto my-16 px-4 sm:h-2/3 flex flex-col items-center justify-around">
  <h2 class="text-3xl font-bold mb-8 text-center">{content.services.title}</h2>
  <div class="grid md:grid-cols-3 gap-8">
    <div class="bg-white rounded-lg shadow p-6 flex flex-col">
      <h3 class="text-xl font-semibold mb-2">
        {content.services.babyshower.title}
      </h3>
      <img
        src={content.services.babyshower.image}
        alt={content.services.babyshower.title}
        class="w-full h-48 object-cover rounded-lg mb-4"
      />
      <p class="text-gray-700">{content.services.babyshower.text}</p>
    </div>
    <div class="bg-white rounded-lg shadow p-6 flex flex-col">
      <h3 class="text-xl font-semibold mb-2">
        {content.services.weddings.title}
      </h3>
      <img
        src={content.services.weddings.image}
        alt={content.services.weddings.title}
        class="w-full h-48 object-cover rounded-lg mb-4"
      />
      <p class="text-gray-700">{content.services.weddings.text}</p>
    </div>
    <div class="bg-white rounded-lg shadow p-6 flex flex-col">
      <h3 class="text-xl font-semibold mb-2">
        {content.services.funerals.title}
      </h3>
      <img
        src={content.services.funerals.image}
        alt={content.services.funerals.title}
        class="w-full h-48 object-cover rounded-lg mb-4"
      />
      <p class="text-gray-700">{content.services.funerals.text}</p>
    </div>
  </div>
</section>
