---
const { locale } = Astro.props;
---

<!doctype html>
<html lang={locale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href={`https://lapalomablanca.es/${locale}/`} />
		<meta name="generator" content={Astro.generator} />
		<style>
			@import url("https://fonts.googleapis.com/css2?family=Boldonse&display=swap");
		</style>
		<slot name="head" />
	</head>
	<body class="h-100vh overflow-x-hidden bg-default text-default text-base">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
